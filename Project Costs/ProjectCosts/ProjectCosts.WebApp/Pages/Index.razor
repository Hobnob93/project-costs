@using ProjectCosts.Core.Enum;

@page "/"
@inherits FluxorComponent

<ApiFetchDisplay FetchState="State.Value" DisplayPredicate="() => Things.Length > 0">
    <MudGrid>
        @foreach (var thing in Things)
        {
            <MudItem xs="12" sm="12" md="6" lg="4">
                <ThingCard Thing="thing" />
            </MudItem>
        }
    </MudGrid>
</ApiFetchDisplay>
