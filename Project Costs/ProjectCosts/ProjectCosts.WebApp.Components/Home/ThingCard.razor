@using ProjectCosts.Core.Extensions;

<MudCard>
    <MudCardHeader>
        <CardHeaderAvatar>
            <ThingTypeAvatar ThingType="@Thing.Type" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6" Color="Color.Warning">@Thing.Name</MudText>
            <MudText Typo="Typo.body2">@Thing.Type.GetDisplayName()</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Default" OnClick="NavigateToEdit" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardMedia Image="@ThingImage" Height="250" />
    <MudCardContent>
        <MudPaper Elevation="0" Class="d-flex align-center justify-space-between mud-width-full py-4">
            <DateDisplay Date="@Thing.StartDate" />
            <DaysAwayDisplay Date="@Thing.StartDate" />
            <CostDisplay Cost="@Thing.Cost" />
        </MudPaper>
    </MudCardContent>
</MudCard>
